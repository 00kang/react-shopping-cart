{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["react-app", "react-app/jest", "prettier", "airbnb"],
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["**/*.stories.*"],
      "rules": {}
    }
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },

  "rules": {
    "import/no-anonymous-default-export": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/react-in-jsx-scope": 0,
    "comma-dangle": "off"
  }
}
