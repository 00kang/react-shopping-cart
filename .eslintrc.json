{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "plugin:react/recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-var": "error",
    "max-depth": ["error", 2],
    "no-console": "warn",
    "react/function-component-definition": [
      2,
      { "namedComponents": "arrow-function" }
    ],
    "object-curly-newline": [
      "error",
      { "ObjectPattern": { "multiline": true } }
    ]
  }
}
